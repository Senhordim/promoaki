
<section class="content-header">
  <h1>Painel de <small>controle</small></h1>
</section>
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <!-- Horizontal Form -->
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="box box-default">
        <div class="box-header with-border">
          <i class="fa fa-fw fa-edit"></i> <h3 class="box-title">Configurações</h3>
          <div class="pull-right">
            <%= link_to 'Voltar', :back, class: 'btn btn-default' %>
            <%= f.submit class: 'btn btn-primary' %>
          </div>
        </div>

          <%= f.error_notification %>
          <div class="box-body">

            <div class="row">
              <div class="col-md-6">
                  <%= f.input :fantasy_name , required: true %>

              </div>
               <div class="col-md-6">
                  <%= f.input :social_name, required: true %>
               </div>
            </div>

            <div class="row">

              <div class="col-md-4">
                <%= f.input :cnpj, required: true, input_html: {class: 'cnpj-mask'} %>
              </div>

              <div class="col-md-4">
                <%= f.input :email, required: true, autofocus: true %>
              </div>

              <div class="col-md-4">
                <%= f.input :phone, required: true, input_html: {class: 'phone-mask'} %>
              </div>

            </div>

            <div class="row">
              <div class="col-md-4">
                <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
              </div>

              <div class="col-md-4">
                <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
              </div>
              <div class="col-md-4">
                <%= f.input :password_confirmation, required: false %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-12">
                <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
              </div>
            </div>
          </div>
      </div>
      <% end %>
    </div>
  </div>
</section>

