<div class="register-box-body">
  <p class="login-box-msg">Crie sua conta agora!</p>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="row">
      <div class="col-md-12">
        <%= f.input :fantasy_name , required: true %>
        <%= f.input :social_name, required: true %>
      </div>
    </div>

    <div class="row">
       <div class="col-md-6">
        <%= f.input :cnpj, required: true, input_html: {class: 'cnpj-mask'} %>
       </div>

       <div class="col-md-6">
        <%= f.input :phone, required: true, input_html: {class: 'phone-mask'} %>
       </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <%= f.input :email, required: true, autofocus: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      </div>
      <div class="col-md-6">
        <%= f.input :password_confirmation, required: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <%= f.button :submit, "Criar conta", class: 'btn btn-success btn-block btn-flat btn-lg' %>
      </div>
    </div>
  <% end %>
  <%= render "stores/shared/links" %>
</div>

