
<% if current_store.address.present? %>
<!-- Content Wrapper. Contains page content -->

  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Painel
      <small>de controle</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">Dashboard</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
      <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-aqua">
          <div class="inner">
            <h3><%= @count_promotion %></h3>

            <p>Promoções</p>
          </div>
          <div class="icon">
            <i class="ion ion-pricetags"></i>
          </div>
          <%= link_to ad_promotions_path, class: "small-box-footer" do %>
            Ver todas <i class="fa fa-arrow-circle-right"></i>
          <% end %>
        </div>
      </div>
    </div>
    <!-- /.row -->
    <!-- Main row -->
    <div class="row">
      <!-- Left col -->
      <section class="col-lg-7 connectedSortable">

      </section>

    </div>
    <!-- /.row (main row) -->
  </section>
  <!-- /.content -->

<% else %>

    <section class="content-header">
      <br>
    </section>
    <section class="content">
      <div class="row">
        <div class="col-md-12">
          <div style="text-align: center">
            <i class="fa fa-fw fa-map-marker" style="font-size: 80px"></i>
            <h3>Cadastre o seu endereço</h3>
            <p>Esse passo é nescessário para sua loja ficar<br> visível no Aplicativo <b>Promoaki</b>.</p>
            <%= link_to new_ad_address_path, class: 'btn btn-success btn-lg' do %>
              Cadastre agora <i class="fa fa-fw fa-angle-double-right"></i>
            <% end %>
          </div>
        </div>
      </div>
    </section>

<% end %>

