  <header class="main-header">
    <!-- Logo -->

    <%= link_to ad_root_path, class: 'logo' do %>
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><b>P</b>AK</span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>Promo</b>AKI</span>
    <% end %>

    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>

      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <!-- User Account: style can be found in dropdown.less -->
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= image_tag 'ad/user2-160x160.jpg', class: 'user-image' %>
              <span class="hidden-xs"><%= current_store.fantasy_name %></span>
            </a>
            <ul class="dropdown-menu">
              <!-- User image -->
              <li class="user-header">


                <p>
                  <%= current_store.fantasy_name %><br>
                  <%= current_store.social_name %>
                  <small><%= current_store.created_at %></small>
                </p>
              </li>
              <!-- Menu Body -->

              <!-- Menu Footer-->
              <li class="user-footer">
                <div class="pull-left">
                  <%= link_to "Editar", edit_store_registration_path, class: 'btn btn-default btn-flat'  %>
                </div>
                <div class="pull-right">
                  <%= link_to "Sair", destroy_store_session_path, method: :delete, class: 'btn btn-default btn-flat'  %>
                </div>
              </li>
            </ul>
          </li>
          <!-- Control Sidebar Toggle Button -->
          <li>
            <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
          </li>
        </ul>
      </div>
    </nav>
  </header>
