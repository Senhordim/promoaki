<!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Painel
      <small>de controle</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Paienl</a></li>
      <li class="active">Lista de promoções</li>
    </ol>
  </section>

  <section class="content">
    <div class="row">
      <div class="col-md-12">
        <div class="box">
              <div class="box-header with-border">
                <h3 class="box-title">Lista de Promoções</h3>
              </div>
              <!-- /.box-header -->
              <div class="box-body">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th style="width: 10px">#</th>
                      <th>Segmeno</th>
                      <th>Nome</th>
                      <th>Data de criação</th>
                      <th>Data fim</th>
                      <th style="width: 200px">Ações</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @promotions.each do |promotion| %>
                      <tr>
                        <td><%= promotion.id %></td>
                        <td><%= promotion.segment.name %></td>
                        <td><%= promotion.title %></td>
                        <td><%= promotion.created_at.strftime("%d/%m/%Y %H:%M:%S") %></td>
                        <td>
                          <% if promotion.endDate.present? %>
                            <%= promotion.endDate.strftime("%d/%m/%Y") %>
                          <% else %>
                            -- Sem data para finalizar --
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
        </div>
      </div>
    </div>
  </section>
