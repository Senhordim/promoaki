<%= simple_form_for [:panel, @admin] do |f| %>

  <div class="row">
    <div class="col-md-6">
      <% if policy(@admin).edit? %>
        <div class="form-group">
          <%= f.collection_radio_buttons :role, options_for_roles, :id, :description do |fb| %>
          <div class="radio">
            <%= fb.label { fb.radio_button + fb.text } %>
          </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-md-6">
      <%= f.button :submit, class: 'pull-right' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= f.input :full_name, input_html: {placeholder: 'Nome completo'} %>
    </div>
    <div class="col-md-6">
      <%= f.input :email, input_html: {placeholder: 'Insira um email vÃ¡lido'} %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= f.input :password, input_html: {placeholder: 'Insira uma senha segura'} %>
    </div>
    <div class="col-md-6">
      <%= f.input :password_confirmation, input_html: {placeholder: 'Confirme aqui sua senha'} %>
    </div>
  </div>

<% end %>
