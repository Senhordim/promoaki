<!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Painel
      <small>de controle</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Painel</a></li>
      <li class="active">Lista de Administradores</li>
    </ol>
  </section>

  <section class="content">

    <div class="row">
      <div class="col-md-12">
        <div class="box">
              <div class="box-header with-border">
                <h3 class="box-title">Lista de Administradores</h3>
                <% if policy(@admins).new? %>
                  <%= link_to new_panel_admin_path, class: 'btn btn-primary pull-right' do %>
                      <i class="fa fa-plus"></i> Cadastrar administrador
                  <% end %>
                <% end %>
              </div>
              <!-- /.box-header -->
              <div class="box-body">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Nome</th>
                      <th>Email</th>
                      <th>Função</th>
                      <th>Ações</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @admins.each do |admin| %>
                      <tr>
                        <td><%= admin.id %></td>
                        <td><%= admin.full_name  %></td>
                        <td><%= admin.email  %></td>
                        <td><%= admin.role_i18n  %></td>
                        <td>
                          <%= link_to edit_panel_admin_path(admin), class: 'btn btn-default' do %>
                            <i class="fa fa-edit"></i>
                          <% end %>
                          <% if policy(@admins).destroy? %>
                            <% if current_admin.id != admin.id %>
                              <%= link_to panel_admin_path(admin), method: :delete, class: 'btn btn-danger', data: {confirm: "Você realmente deseja excluir #{admin.email}?"} do %>
                                <i class="fa fa-minus"></i>
                              <% end %>
                            <% end %>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
        </div>
      </div>
    </div>
  </section>


