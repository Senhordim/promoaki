  <header class="main-header">
    <!-- Logo -->

    <%= link_to ad_root_path, class: 'logo' do %>
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><b>P</b>AK</span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg">Promo<b>AKI</b></span>
    <% end %>

    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>

      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <!-- User Account: style can be found in dropdown.less -->
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= image_tag 'panel/admin_avatar.png', class: 'user-image' %>
              <span class="hidden-xs">Olá <%= current_admin.full_name %>, você está logado como administrador.</span>
            </a>
            <ul class="dropdown-menu">
              <!-- User image -->
              <li class="user-header">
                <% if current_admin.email.present? %>
                  <i class="fa fa-fw fa-map-marker" style="font-size: 40px; color: #fff"></i>
                  <p><%= current_admin.email %></p>
                <% end %>
                <p>
                  <%= current_admin.email %>
                  <small><%= time_ago_in_words(current_admin.created_at) %></small>
                </p>
              </li>
              <!-- Menu Body -->

              <!-- Menu Footer-->
              <li class="user-footer">
                <div class="pull-left">
                  <%#= link_to "Configurações", edit_store_registration_path, class: 'btn btn-default btn-flat'  %>
                </div>
                <div class="pull-right">
                  <%#= link_to "Sair", destroy_store_session_path, method: :delete, class: 'btn btn-default btn-flat'  %>
                </div>
              </li>
            </ul>
          </li>
          <!-- Control Sidebar Toggle Button -->
          <li>
            <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
          </li>
        </ul>
      </div>
    </nav>
  </header>
