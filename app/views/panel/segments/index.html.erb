<!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Painel
      <small>de controle</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Painel</a></li>
      <li class="active">Lista de Segmentos</li>
    </ol>
  </section>

  <section class="content">

    <div class="row">
      <div class="col-md-12">
        <div class="box">
              <div class="box-header with-border">
                <h3 class="box-title">Lista de Segmentos</h3>
                <%= link_to new_panel_segment_path, class: 'btn btn-primary pull-right' do %>
                  <i class="fa fa-plus"></i> Cadastrar segmento
                <% end %>
              </div>
              <!-- /.box-header -->
              <div class="box-body">
                <table class="table table-bordered">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Nome do segmento</th>
                      <th>Criado em</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @segments.each do |segment| %>
                      <tr>
                        <td><%= segment.id %></td>
                        <td><%= segment.name  %></td>
                        <td><%= segment.created_at  %></td>
                        <td width="250px">

                          <%= link_to edit_panel_admin_path(segment), class: 'btn btn-default' do %>
                            <i class="fa fa-edit"></i>
                          <% end %>
                          <%= link_to panel_segment_path(segment), method: :delete, class: 'btn btn-danger', data: {confirm: "VocÃª realmente deseja excluir o segmento: #{segment.name}?"} do %>
                            <i class="fa fa-minus"></i>
                          <% end %>

                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
        </div>
      </div>
    </div>
  </section>



